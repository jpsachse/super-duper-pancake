    "version": "0.1.0",
    "command": "bash",
    "windows": {
        "command": "cmd"
    },
    "isShellCommand": true,
    "showOutput": "always",
    "args": [
        "-c"
    ],
    "tasks": [
        {
            "taskName": "test",
            "suppressTaskName": true,
            "isTestCommand": true,
            "args": [
                "npm test"
            ]
        },
        {
            "taskName": "build",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "args": [
                "tsc"
            ]
        }
    ]
}